<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Book Hotel"
                android:layout_marginLeft="22dp"
                android:textSize="20sp"
                android:gravity="center"
               android:textStyle="bold"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_marginLeft="25dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"

                android:layout_alignTop="@+id/register" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="More"
                android:layout_marginLeft="200dp"
                android:textSize="20sp"
                android:textStyle="bold"


                android:gravity="center"
                android:layout_alignRight="@+id/tips"
                android:layout_alignEnd="@+id/tips"
                android:layout_alignTop="@+id/more"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Travel Tips"
                android:layout_marginLeft="200dp"
                android:textSize="20sp"
                android:textStyle="bold"

                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_alignRight="@+id/tips"
                android:layout_alignEnd="@+id/tips" />
        <ImageView
            android:id="@+id/bookhotel"
            android:layout_width="150dp"
            android:layout_marginLeft="25dp"
            android:layout_height="200dp"
            android:src="@mipmap/bookhotel"
            android:background="@drawable/item_background7"
            android:onClick="book"

            android:layout_marginTop="50dp"


            />

        <ImageButton
            android:id="@+id/more"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp"
            android:onClick="more"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@mipmap/more"
            android:background="@drawable/item_background7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/register"
            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"


            android:layout_height="200dp"
            android:src="@mipmap/register"
            android:background="@drawable/item_background7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/tips"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
android:onClick="tips"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@mipmap/tips"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/item_background7"
            />

    </RelativeLayout>
</LinearLayout>